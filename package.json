{
  "name": "oh-markdown",
  "private": true,
  "description": "Oh! Markdown~ parse and recompile markdown for render by js, support jsx, dom-tree or html",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "turbo run clean",
    "build": "turbo run build",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest",
    "test": "turbo run test",
    "prepare": "husky install",
    "release": "turbo run release && changeset version && changeset publish"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yeliex/oh-markdown/issues"
  },
  "homepage": "https://github.com/yeliex/oh-markdown#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@mdx-js/react": "^2.2.1",
    "@swc/core": "^1.3.30",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.13",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.9",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest-resolver": "^2.0.0",
    "turbo": "^1.7.0",
    "typescript": "^4.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
