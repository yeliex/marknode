{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "clean": {
            "inputs": ["src/**", "tsconfig.json", "package.json"]
        },
        "build": {
            "dependsOn": ["^build", "^clean"],
            "outputs": ["es/**"],
            "inputs": ["src/**", "tsconfig.json", "package.json"]
        },
        "test": {
            "dependsOn": ["build", "test:type", "//#test:unit"]
        },
        "//#test:unit": {
            "outputs": ["coverage/**"],
            "inputs": ["__tests__/**"]
        },
        "test:type": {
            "dependsOn": ["^build"]
        },
        "release": {
            "dependsOn": ["build", "test"]
        }
    },
    "globalDependencies": [
        "tsconfig.base.json"
    ]
}
